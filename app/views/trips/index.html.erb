<div class="page_header">
  <h1>All of the Trips</h1>
</div>


<%= link_to "Post a New Trip", new_trip_path, class: "btn btn-warning" %>


<% @trips.each do |trip|  %>
<div class="trips">
  <strong><%= trip.user.full_name %> </strong>
  <p><%= trip.content %></p>

  <div class="meta">
    
    <%= link_to time_ago_in_words(trip.created_at) + " ago", trip %> 

    <span class="admin">
      | <%= link_to "Edit", edit_trip_path(trip) %> |
      <%= link_to "Delete", trip, method: :delete, data: {confirm: "Are you sure you want to delete it?"} %>
    </span>
  </div>
</div>
<% end %>

